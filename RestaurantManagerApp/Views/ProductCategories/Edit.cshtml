@model RestaurantManagerApp.Models.ProductCategory

<h2 class="text-center mt-5">Modifică o categorie de produse</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            @using (Html.BeginForm(actionName: "Edit", controllerName: "ProductCategories",
            method: FormMethod.Post, routeValues: new{ id = Model.Id }))
            {
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.Label("Name", "Nume categorie de produse")
                <br />
                @Html.TextBox("Name", null, new { @class = "form-control" })
                @Html.ValidationMessageFor(pc => pc.Name, "", new { @class = "text-danger" })
                <br />
                <button class="btn btn-success" type="submit">Modifică</button>
            }
        </div>
    </div>
</div>