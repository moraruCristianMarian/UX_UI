
@{
    string reviewedObjectId = "";
    string formActionUrl = "";
    bool isRestaurantReview = true;
    try
    {
        reviewedObjectId = ViewBag.ReviewedObjectId.ToString();
        formActionUrl = (string)ViewBag.FormActionUrl;
        isRestaurantReview = ViewBag.IsRestaurantReview;
    }
    catch (Microsoft.CSharp.RuntimeBinder.RuntimeBinderException)
    {
        TempData["message"] = "Eroare la încărcarea recenziei. Vă rugăm să vă întoarceți la pagina anterioară și să încercați din nou.";
        return;
    }
}

<div class="card">
    <form method="post" action="@formActionUrl">
        <div class="card-body">
            @if (isRestaurantReview)
            {
                <input type="hidden" name="ReviewedRestaurantId" value="@reviewedObjectId" />
            }
            else
            {
                <input type="hidden" name="ReviewedProductId" value="@reviewedObjectId" />
            }

            <div class="d-flex justify-content-between">
                <strong class="d-flex align-items-center">
                    <i class="bi bi-person"></i>
                    @ViewBag.ThisUserName
                </strong>
                <div class="card">
                    <div class="d-flex align-items-center m-0">
                        <label class="m-0 p-2" for="Rating">Rating</label>
                        <div class="d-flex align-items-center p-2">
                            <div style="margin-right: 10px">1</div>
                            @for (int i = 1; i <= 5; i++)
                            {
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="Rating" id="Rating_@i" value="@i">
                                </div>
                            }
                            <div>5</div>
                        </div>
                    </div>
                </div>
            </div>
            @Html.ValidationMessage("Rating", null, new { @class = "text-danger" })
            <br />

            @Html.Label("Description", "Descriere")
            <br />
            @Html.TextBox("Description", null, new { @class = "form-control" })
            @Html.ValidationMessage("Description", null, new { @class = "text-danger" })
            <br />

            <button class="btn btn-success " type="submit">Adaugă recenzie</button>
        </div>
    </form>
</div>