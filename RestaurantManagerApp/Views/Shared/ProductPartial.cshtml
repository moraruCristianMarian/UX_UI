@model RestaurantManagerApp.Models.Product


<div class="card product" style="border: 0">
    <div class="card-body">
        <div class="product-content">
            <h3 class="card-title alert-warning py-2 px-2 rounded-2">@Model.Name</h3>
            <div class="d-flex justify-content-between flex-row mt-3">
                <div class="outlined-text">
                    <i class="bi bi-layout-text-window-reverse"></i> @Model.ProductCategory.Name
                </div>
                @if (Model.DiscountedCost == null)
                {
                    <div class="product-costs outlined-text"><i class="bi bi-cash-coin"></i>
                        <b>@Model.Cost RON</b>
                    </div>
                }
                else
                {
                    <div class="product-costs outlined-text">
                        <s style="color: red;">
                            <span style="color: black;">
                                <i class="bi bi-cash-coin"></i> @Model.Cost RON
                            </span>
                        </s>
                        <div>
                            <i class="bi bi-cash-coin"></i><b> @Model.DiscountedCost RON</b>
                        </div>
                    </div>
                }
            </div>
            <a class="product-info-btn btn btn-success mt-3" href="/Products/Show/@Model.Id">Informații produs</a>
        </div>

        <image class="product-image" src="/img/@Model.ImageFilePath" alt="(Product image)"></image>
    </div>
</div>

<style>
    .product-image
    {
        z-index: -1;

        position: absolute;
        top: 50%;
        left: 50%;

        width: 100%;
        height: 100%;

        object-fit: cover;
        transform: translate(-50%, -50%);

        border-radius: 20px;
    }

    .product
    {
        z-index: 1;
        display: flex;

        width: 300px;
        height: 300px;
    }

    .product *
    {
        flex: 1;
    }

    .product-costs
    {
        text-align: right;
    }

    .product-info-btn
    {
        position: absolute;
        bottom: 10px;
        left: 10px;
    }

    .outlined-text
    {
        text-shadow: -1px -1px #000000,
                      1px -1px #000000,
                     -1px  1px #000000,
                      1px  1px #000000;
        color: #FFFFFF;
    }
</style>